{
  "name": "lost-pet-finder",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev:be": "nodemon --watch ./be-src/index.ts --exec ts-node ./be-src/index.ts",
    "dev:fe": "parcel serve ./fe-src/index.html",
    "build:be": "tsc",
    "build:fe": "parcel build ./fe-src/index.html --dist-dir fe-dist",
    "build": "yarn build:fe && yarn build:be",
    "start": "node ./be-dist/index.js",
    "sync": "ts-node ./be-src/sync.ts"
  },
  "dependencies": {
    "@vaadin/router": "^1.7.4",
    "algoliasearch": "^4.11.0",
    "bearer-token": "^2.0.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "parcel": "^2.0.0-rc.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.12.0-beta.1",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@parcel/transformer-image": "2.0.0-rc.0",
    "nodemon": "^2.0.15"
  }
}
